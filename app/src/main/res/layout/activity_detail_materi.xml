<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materi.DetailMateriActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/popmed"
            android:text="Detail Materi"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_profile"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <TextView
            android:id="@+id/text_namamateri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teknik Gaya Dada"
            android:fontFamily="@font/popmed"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi:"
            android:fontFamily="@font/popmed"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_desc_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untuk mengapung di permukaan air, letakkan tubuh dalam posisi horizontal. Tubuh harus sejajar dengan permukaan air, dengan wajah menghadap ke bawah dan mata di bawah air. Selain itu, gerakan kaki adalah faktor penting dalam mengapung. Dengan kaki lurus, lakukan gerakan yang lembut seperti berenang kecil-kecilan."
            android:fontFamily="@font/popmed"
            android:textSize="10sp"
            android:textColor="#94A3B8"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_perbarui"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/btn_form"
        android:text="Perbarui"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/popbold"
        android:textSize="12sp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hapus"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/btn_form"
        android:text="Hapus"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/popbold"
        android:textSize="12sp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>