<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".siswa.TambahDataSiswaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/popmed"
            android:text="Tambah Data Siswa"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_boxform"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:fontFamily="@font/popmed"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edt_nama"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_form"
            android:hint="Masukkan nama lengkap"
            android:fontFamily="@font/popregular"
            android:textSize="12sp"
            android:paddingStart="11dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearnoidentitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_boxform"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearnama">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Identitas"
            android:fontFamily="@font/popmed"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edt_noidentitas"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_form"
            android:hint="Masukkan nomor identitas"
            android:fontFamily="@font/popregular"
            android:textSize="12sp"
            android:paddingStart="11dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearnotelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_boxform"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearnoidentitas">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Telpon"
            android:fontFamily="@font/popmed"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edt_nottelpon"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_form"
            android:hint="Masukkan nomor telpon"
            android:fontFamily="@font/popregular"
            android:textSize="12sp"
            android:paddingStart="11dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_boxform"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearnotelp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas"
            android:fontFamily="@font/popmed"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/edt_kelas"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="15dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_form"
            android:fontFamily="@font/popregular"
            android:textSize="12sp"
            android:paddingStart="11dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/btn_form"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/popbold"
        android:textSize="12sp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>